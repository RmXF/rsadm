def getData(update, context):
    chat_id = actualizar. effective_chat. id
    mensaje = ""

    crypto_data = get_prices()
    para i en crypto_data:
        moneda = crypto_data[i]["moneda"]
        precio = crypto_data[i]["precio"]
        change_day = crypto_data[i]["change_day"]
        change_hour = crypto_data[i]["change_hour"]
        message += f"Coin:  {coin}\nPrecio: ${precio:,.2f}\nCambio de hora:  {change_hour:.3f}%\nCambio de día:  {change_day:.3f}%\n\n"

    contexto. bot. send_message(chat_id=chat_id, texto=mensaje)

